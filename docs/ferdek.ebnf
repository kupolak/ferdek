(* ============ PROGRAM ============ *)
program = "CO JEST KURDE" , { import_stmt | declaration | function_decl | class_decl } , "TRZEBA SPAĆ ŻEBY RANO DO ROBOTY WSTAĆ" ;

(* ============ IMPORTS ============ *)
import_stmt = "O KOGO MOJE PIĘKNE OCZY WIDZĄ" , identifier ;

(* ============ DEKLARACJE ============ *)
declaration = var_decl | array_decl | statement ;

var_decl = "CYCU PRZYNIEŚ NO" , identifier ,
           "TO NIE SĄ TANIE RZECZY" , ( expression | "A ŻEBYŚ PAN WIEDZIAŁ" | "GUL MI SKOCZYŁ" | "W TYM KRAJU NIE MA PRACY DLA LUDZI Z MOIM WYKSZTAŁCENIEM" ) ;

array_decl = "PANIE TO JEST PRYWATNA PUBLICZNA TABLICA" , identifier ,
             "TO NIE SĄ TANIE RZECZY" , "[" , [ expression , { "," , expression } ] , "]" ;

(* ============ INSTRUKCJE ============ *)
statement = print_stmt
          | read_stmt
          | assign_stmt
          | if_stmt
          | while_stmt
          | func_call_stmt
          | return_stmt
          | try_stmt
          | throw_stmt
          | break_stmt
          | continue_stmt
          | array_access ;

print_stmt = "PANIE SENSACJA REWELACJA" , ( expression | string_literal ) ;

read_stmt = "CO TAM U PANA SŁYCHAĆ" , identifier ;

assign_stmt = "O KURDE MAM POMYSŁA" , identifier ,
              "A PROSZĘ BARDZO" , expression ,
              { arith_op , expression } ,
              "NO I GITARA" ;

if_stmt = "NO JAK NIE JAK TAK" , expression ,
          { statement } ,
          [ "A DUPA TAM" , { statement } ] ,
          "CHAMSTWO W PAŃSTWIE" ;

while_stmt = "CHLUŚNIEM BO UŚNIEM" , expression ,
             { statement } ,
             "A ROBIĆ NI MA KOMU" ;

return_stmt = "I JA INFORMUJĘ ŻE WYCHODZĘ" , [ expression ] ;

try_stmt = "HELENA MUSZĘ CI COŚ POWIEDZIEĆ" ,
           { statement } ,
           "HELENA MAM ZAWAŁ" , identifier ,
           { statement } ;

throw_stmt = "O KARWASZ TWARZ" , expression ;

break_stmt = "A POCAŁUJCIE MNIE WSZYSCY W DUPĘ" ;

continue_stmt = "AKUKARACZA" ;

array_access = "WYPIERDZIELAJ PAN NA POZYCJĘ" , identifier , "[" , expression , "]" ;

(* ============ FUNKCJE ============ *)
function_decl = "ALE WIE PAN JA ZASADNICZO" , identifier ,
                [ "NO DOBRZE ALE CO JA Z TEGO BĘDĘ MIAŁ" ] ,
                [ "NA TAKIE TEMATY NIE ROZMAWIAM NA SUCHO" , param_list ] ,
                { declaration } ,
                "DO WIDZENIA PANU" ;

param_list = identifier , { "," , identifier } ;

func_call_stmt = "W MORDĘ JEŻA" , identifier , [ "(" , arg_list , ")" ] ;

func_call_with_assign = "AFERA JEST" , identifier , 
                        "W MORDĘ JEŻA" , identifier , [ "(" , arg_list , ")" ] ;

arg_list = expression , { "," , expression } ;

(* ============ KLASY ============ *)
class_decl = "ALE JAJA" , identifier ,
             { var_decl | function_decl } ,
             "DO WIDZENIA PANU" ;

new_object = "DZIAD ZDZIADZIAŁY JEDEN" , identifier , [ "(" , arg_list , ")" ] ;

(* ============ WYRAŻENIA ============ *)
expression = term , { comparison_op , term } ;

term = factor , { arith_op , factor } ;

factor = integer
       | identifier
       | "A ŻEBYŚ PAN WIEDZIAŁ"      (* true *)
       | "GUL MI SKOCZYŁ"            (* false *)
       | "W TYM KRAJU NIE MA PRACY DLA LUDZI Z MOIM WYKSZTAŁCENIEM"  (* null *)
       | array_access
       | new_object
       | "(" , expression , ")" ;

(* ============ OPERATORY ============ *)
arith_op = "BABKA DAWAJ RENTĘ"                        (* + *)
         | "GÓWNO MNIE TO OBCHODZI"                  (* - *)
         | "PASZOŁ WON"                              (* * *)
         | "MUSZĘ DO SRACZA"                         (* / *)
         | "PROSZĘ MNIE NATYCHMIAST OPUŚCIĆ" ;       (* % *)

comparison_op = "TO PANU SIĘ CHCE WTEDY KIEDY MNIE"  (* == *)
              | "PAN TU NIE MIESZKASZ"                (* != *)
              | "MOJA NOGA JUŻ TUTAJ NIE POSTANIE"    (* > *)
              | "CO SIĘ TAK WIERCISZ JAK GÓWNO W PRZERĘBLU" ; (* < *)

logical_op = "PIWO I TELEWIZOR"                      (* AND *)
           | "ALBO JUTRO U ADWOKATA" ;               (* OR *)

(* ============ TOKENY ============ *)
identifier = letter , { letter | digit | "_" } ;
integer = digit , { digit } ;
string_literal = '"' , { character } , '"' ;
comment = "RYM CYM CYM" , { character } , newline ;

letter = "a" | ... | "z" | "A" | ... | "Z" ;
digit = "0" | ... | "9" ;
```

